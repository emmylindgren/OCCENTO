<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/home_screen_gradient">

    <ImageView
        android:id="@+id/occento_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/occento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />
    <Button
        android:id="@+id/play_game_button"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button"
        android:text="spela"
        app:layout_constraintTop_toTopOf="@id/occento_icon"
        app:layout_constraintBottom_toTopOf="@id/add_song_button"
        app:layout_constraintStart_toEndOf="@id/occento_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/add_song_button"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button"
        android:text="Lägg till en låt"
        app:layout_constraintTop_toBottomOf="@id/play_game_button"
        app:layout_constraintStart_toStartOf="@id/play_game_button"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>